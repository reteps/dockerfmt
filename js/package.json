{
  "name": "@reteps/dockerfmt",
  "version": "0.2.5",
  "type": "module",
  "description": "",
  "repository": "git+https://github.com/reteps/dockerfmt/tree/main/js",
  "author": "Peter Stenger <pete@stenger.io>",
  "contributors": [
    "JounQin <admin@1stg.me> (https://www.1stG.me)"
  ],
  "license": "MIT",
  "engines": {
    "node": "^14.18.0 || >=16.0.0"
  },
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/format/d.ts",
        "default": "./dist/format.js"
      },
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "module-sync": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./format.wasm": "./dist/format.wasm",
    "./package.json": "./package.json",
    "./wasm_exec": "./dist/wasm_exec.js",
    "./wasm_exec.js": "./dist/wasm_exec.js"
  },
  "browser": "dist/format.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "//": "Requires tinygo 0.38.0 or later",
    "build": "npm run build-go && npm run build-js",
    "build-go": "tinygo build -o format.wasm -target wasm --no-debug",
    "build-js": "tsc && r -f cjs -o dist -x '**/wasm_exec.js' && cp index.d.cts format.wasm wasm_exec.js dist",
    "format": "prettier --write \"**/*.{cts,js,ts,json}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@pkgr/rollup": "^6.0.2",
    "@types/node": "^22.14.0",
    "prettier": "^3.5.3",
    "prettier-plugin-pkg": "^0.19.0",
    "typescript": "^5.8.3"
  }
}
